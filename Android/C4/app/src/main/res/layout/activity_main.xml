            android:layout_height="30dp"
            android:text="Player 2"
            android:id="@+id/textViewPlayer2"
            android:layout_gravity="left"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical|center_horizontal" />
    </RelativeLayout>

    <ImageView
