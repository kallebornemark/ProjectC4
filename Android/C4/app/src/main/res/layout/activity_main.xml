    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/relativeLayout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/c4_logo_noline"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="false"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true"
        android:maxWidth="200dp"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/relativeLayoutPlayers"
        android:id="@+id/endOfGame"
        android:layout_marginTop="7dp">

        <Button

            android:text="New Game"
            android:id="@+id/buttonNewGame"
            android:enabled="false"
            android:layout_width="140dp"
            android:layout_height="35dp"
            android:textSize="20dp"
            android:textAlignment="center"
            android:gravity="center_vertical|center_horizontal"
            android:layout_alignParentEnd="false"

            android:visibility="invisible"/>

        <Button android:layout_width="140dp" android:layout_height="35dp" android:text="Rematch"
                android:id="@+id/buttonRematch" android:enabled="false" android:visibility="invisible"
                android:gravity="center_vertical|center_horizontal"
                android:textAlignment="center"
                android:textSize="20dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:id="@+id/iconButtonsRL"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="11dp">

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/iconButtons"
            android:layout_alignParentStart="false" android:layout_alignParentEnd="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentLeft="false"
            >

            <ImageButton
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:id="@+id/iconProfile"
                android:adjustViewBounds="false"
                android:background="@drawable/c4_profile"
                android:layout_column="1"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:cropToPadding="false"
                />

            <ImageButton
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:id="@+id/iconSettings"
                android:adjustViewBounds="false"
                android:background="@drawable/c4_settings"
                android:layout_column="2"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:cropToPadding="false"
                />

            <ImageButton
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:id="@+id/iconFriends"
                android:adjustViewBounds="false"
                android:background="@drawable/c4_friends"
                android:layout_column="3"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:cropToPadding="false"
                />

        </GridLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="false"
        android:id="@+id/relativeLayoutPlayers" android:layout_below="@+id/iconButtonsRL"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="false"
        android:layout_marginTop="-6dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/textViewPlayer1"
            android:layout_marginLeft="-14dp">

            <ImageView
