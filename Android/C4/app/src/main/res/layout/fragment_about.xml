<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFCED"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView2" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="30dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewProject"
                android:layout_gravity="center"
                android:textColor="#FF716D61"
                android:textSize="20sp"
                android:layout_marginBottom="15dp"
                android:text="We are C4, a group of four software developers working on a project at MalmÃ¶ University. Support us with 5 stars on the Android Market!"
                android:gravity="center_vertical|center_horizontal"/>

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="@drawable/colorblack"
                android:id="@+id/line"
                android:layout_marginBottom="10dp"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:gravity="center_horizontal" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:text="EMIL SANDGREN"
                    android:id="@+id/emil"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#FF716D61"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="UI-master"
                    android:id="@+id/emildesc"
                    android:layout_gravity="center"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#FF716D61"/>

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:text="KALLE BORNEMARK"
                    android:id="@+id/kalle"
                    android:textSize="20sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="5dp" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Server prodigy"
                    android:id="@+id/kalledesc"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#FF716D61" />


                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:text="JIMMY MAKSYMIW"
                    android:id="@+id/jimmy"
                    android:textSize="20sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="5dp"
                    android:textColor="#FF716D61" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Database expert"
                    android:id="@+id/jimmydesc"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#FF716D61" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="35dp"
                    android:text="ERIK SANDGREN"
                    android:id="@+id/erik"
                    android:textSize="20sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:layout_marginTop="5dp"
                    android:textColor="#FF716D61" />

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="King of powerups"
                    android:id="@+id/erikdesc"
                    android:layout_marginBottom="20dp"
                    android:gravity="center_vertical|center_horizontal"
                    android:textColor="#FF716D61" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:background="@drawable/colorblack"
                    android:id="@+id/line2"
                    android:layout_marginBottom="20dp"
                    android:textColor="#FF716D61" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flat icons designed by Freepick"
                    android:id="@+id/freepick"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:textColor="#FF716D61" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Version 5.0"
                    android:id="@+id/textViewversion"
                    android:layout_gravity="center_horizontal"
                    android:textColor="#FF716D61" />

            </LinearLayout>
            </LinearLayout>
    </ScrollView>
</RelativeLayout>